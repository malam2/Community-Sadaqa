# Production Environment Variables
# Copy this to .env.production and fill in your values

# Database credentials (use strong passwords in production!)
POSTGRES_USER=sadaqa
POSTGRES_PASSWORD=your_super_secure_password_here
POSTGRES_DB=sadaqa

# Full DATABASE_URL for managed databases like Neon
# DATABASE_URL=postgresql://user:password@host.neon.tech/neondb?sslmode=require

# Domain (for Caddyfile)
DOMAIN=sadaqa.yourdomain.com

# Twilio configuration (for SMS privacy features)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PROXY_SERVICE_SID=your_twilio_proxy_service_sid

# Optional: Session secret for future auth
# SESSION_SECRET=your_session_secret_here
